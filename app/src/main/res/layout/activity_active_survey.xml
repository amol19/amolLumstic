<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_board_background"
    tools:context="lumstic.example.com.lumstic.UI.DashBoardActivity">
    <View
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/dashboard_bg_img"></View>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="@color/dash_board_foreground">
        <TextView
            android:textColor="#212121"
            android:id="@+id/active_survey_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Active Surveys"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_below="@+id/divider"
            android:id="@+id/upload_container"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@color/login_button_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_complete_responces" />

            <Button
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/login_button_color"
                android:text="@string/upload_comleted_responses"
                android:textColor="@color/white" />
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"
            android:background="#999999"></View>
        <ListView
            android:id ="@+id/active_survey_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/upload_container"

            android:padding="10dp"></ListView>
    </RelativeLayout>
</RelativeLayout>