<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint_buttons_container">
        <Button
            android:id="@+id/image_hint_button"
            android:layout_weight="1"
            android:textColor="#008b78"
            android:layout_margin="10dp"
            android:background="@drawable/hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Help"
            android:singleLine="true"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/ic_ic_helpimage"
            />

        <Button
            android:id="@+id/text_hint_button"
            android:layout_weight="1"
            android:background="@drawable/hint_button"
            android:layout_margin="10dp"
            android:textColor="#008B7B"
            android:drawableLeft="@drawable/ic_ic_helptext"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Help"
            />
        </LinearLayout>
<RelativeLayout
    android:id="@+id/hint_container"
    android:layout_below="@+id/hint_buttons_container"
    android:layout_width="fill_parent"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFDE1"
        android:textColor="#6B6B6D"
        android:visibility="gone"
        android:text="cdcdcd ndjcnjd ncji dcnjidcn ncjdcnd cdnjdcndjn cndjcnjd jcndjc ncjdcnj cndjcnjdcnjd ncdjcnweijnq ncj2ijcec cnijqen 2ncjinpq nc2ijncji 2ijcncn 2cinjpncij jinceeerjip pij2encj ncjenrjcnij pejrninci iej"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/image_hint"
        android:layout_width="200dp"
        android:background="@color/text_color"
        android:layout_height="180dp"
        android:layout_margin="12dp"/>

    </RelativeLayout>
    <EditText
        android:layout_below="@+id/hint_container"
        android:id="@+id/answer_text"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="type your answer here"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:maxLength="20"
        android:background="@drawable/custom_edittext"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max length 20"
        android:layout_below="@+id/answer_text"
        android:paddingLeft="20dp"
        android:textColor="@color/orange_text"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>